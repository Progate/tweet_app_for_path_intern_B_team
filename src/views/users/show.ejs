<div class="main user-show">
  <div class="container">
    <div class="user">
      <img src="<%= user.imageName %>" data-test="user-image">
      <h2 data-test="user-name"><%= user.name %></h2>
      <p data-test="user-email"><%= user.email %></p>
      <div class="follow-count-wrap">
        <span><%= followCount.followerCount %><span>Followers</span></span>
          <svg class="follow-count-svg" xmlns="http://www.w3.org/2000/svg" width="2" height="24" viewBox="0 0 2 24" fill="none">
          <path d="M1 0V24" stroke="#9E9E9E" stroke-width="0.5"/>
          </svg>    
          <span><%= followCount.followCount %><span>Following</span></span>
      </div>
      <% if(user.id != currentUser.id){ %>
        <% if(isFollowed == true){ %>
        <button class="following-button" type="submit">
          <p class="following-button-text">Following</p>
          <p class="following-button-text-hover">Unfollow</p>
        </button>
        <% } else { %>
        <button class="follow-button" type="submit">
          <p class="follow-button-text">Follow</p>
        </button>
      <% } }%>
    <ul class="user-tabs">
      <li class="active">
        <a href="<%= `/users/${user.id}` %>">Posts</a>
      </li>
      <li>
        <a href="<%= `/users/${user.id}/likes` %>">Likes</a>
      </li>
    </ul>
    <%- include('../_timeline', {timeline: timeline}); %>
  </div>
</div>
